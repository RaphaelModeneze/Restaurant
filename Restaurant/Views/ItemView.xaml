<Page x:Class="Restaurant.Views.ItemView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant.Views"
      xmlns:uc="clr-namespace:Restaurant.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItemView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="ProductTitle" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" Margin="0, 10, 0, 0" />
        <uc:ItemUserControl x:Name="ItemUserControl" Grid.Row="1" />

    </Grid>
</Page>
